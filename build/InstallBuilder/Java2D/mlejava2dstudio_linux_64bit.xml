                <runProgram>
                    <explanation>Set ownership to wizzerworks</explanation>
                    <program>chown</program>
                    <programArguments>-R wizzerworks ${installdir}</programArguments>
                </runProgram>
                <runProgram>
                    <program>chgrp</program>
                    <programArguments>-R wizzerworks ${installdir}</programArguments>
                </runProgram>
                <runProgram>
