            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}/tools/3rdparty/ActiveTcl</destination>
                    <name>activetcl</name>
                    <platforms>linux-x64</platforms>
                    <distributionFileList>
                        <distributionFile>
