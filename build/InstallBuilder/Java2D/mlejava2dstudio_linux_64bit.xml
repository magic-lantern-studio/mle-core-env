                <addGroup>
                    <explanation>Adding Group wizzerworks</explanation>
                    <groupname>wizzerworks</groupname>
                </addGroup>
                <addGroupToUser>
                    <explanation>Add group wizzerworks to user</explanation>
                    <groupname>wizzerworks</groupname>
                    <username>${env(USER)}</username>
