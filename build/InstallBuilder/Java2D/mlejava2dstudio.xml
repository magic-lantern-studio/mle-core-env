<project>
    <shortName>mlejava2dstudio</shortName>
    <fullName>Magic Lantern Studio</fullName>
    <version>1.0.01032018-beta-x86</version>
    <readmeFile>resources/WindowsReleaseNotes.txt</readmeFile>
    <licenseFile>resources/license.txt</licenseFile>
    <leftImage>resources/WwSidebar.png</leftImage>
    <logoImage>resources/genieLamp_48x48_32bit.png</logoImage>
    <splashImage>resources/WwLogoSplash.png</splashImage>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>Create Magic Lantern titles for Java2D</comment>
                    <exec></exec>
                    <icon></icon>
                    <name>Magic Lantern Java2D Studio</name>
                    <path></path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}\mlejava2dstudio.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}\GenieLamp.ico</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>stage/MagicLantern</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>resources/mlejava2dstudio.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>resources/GenieLamp.ico</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                </folder>
                <folder>
                    <description>Magic Lantern Runtime Libraries</description>
                    <destination>${installdir}/lib/java/runtime</destination>
                    <name>libruntime</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/stages.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/actors.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/mlert.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/mlmath.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/mrefs.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/parts.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/props.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/roles.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/sets.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/stagesdoc.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/actorsdoc.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/mlertdoc.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/mlmathdoc.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/mrefsdoc.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/partsdoc.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/propsdoc.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/rolesdoc.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/java/runtime/setsdoc.jar</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Magic Lantern Binaries</description>
                    <destination>${installdir}/bin</destination>
                    <name>bin</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../bin/dumpgroup.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../bin/dumpmedia.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../bin/dumpscene.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../bin/DWPChecker.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../bin/gendpp.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../bin/gengroup.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../bin/genmakefile.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../bin/genmedia.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../bin/genppscript.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../bin/genscene.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../bin/gentables.exe</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Magic Lantern Set Workprints</description>
                    <destination>${installdir}/parts/sets/java/workprints</destination>
                    <name>sets</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../Parts/sets/java/workprints/MleJ2dSet.wpf</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Magic Lantern Title Templates</description>
                    <destination>${installdir}/lib</destination>
                    <name>libtemplates</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../lib/TOCJavaGlobals.tmpl</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/TitleCppCode.tmpl</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/TitleJavaCode.tmpl</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../lib/TOCCppGlobals.tmpl</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <parameterList>
                <booleanParameter>
                    <name>installTCL</name>
                    <title>Install Tool Command Language (TCL)</title>
                    <description></description>
                    <explanation>TCL is required by the Magic Lantern mastering tools.</explanation>
                    <value>1</value>
                    <default>1</default>
                </booleanParameter>
            </parameterList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Create Magic Lantern titles for Java2D</comment>
                    <name>Magic Lantern Java2D Studio</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}\mlejava2dstudio.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}\GenieLamp.ico</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
        <component>
            <name>tcl</name>
            <description>TCL Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}/tools/3rdparty/ActiveTcl</destination>
                    <name>activetcl</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../tools/3rdparty/ActiveTcl/ActiveTcl8.6.4.1.299124-win32-ix86-threaded.exe</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <parameterList>
                <directoryParameter>
                    <name>installdirTCL</name>
                    <title>Specifiy TCL home directory</title>
                    <description></description>
                    <explanation>Please indicate where you plan to install TCL.</explanation>
                    <value></value>
                    <default>C:\Tcl</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <mustBeWritable>0</mustBeWritable>
                    <mustExist>0</mustExist>
                    <width>40</width>
                    <ruleList>
                        <isTrue>
                            <value>${installTCL}</value>
                        </isTrue>
                    </ruleList>
                </directoryParameter>
            </parameterList>
            <postInstallationActionList>
                <runProgram>
                    <explanation>Installing TCL</explanation>
                    <program>${installdir}/tools/3rdparty/ActiveTcl/ActiveTcl8.6.4.1.299124-win32-ix86-threaded.exe</program>
                    <programArguments></programArguments>
                    <workingDirectory>${installdir}</workingDirectory>
                    <ruleList>
                        <isTrue>
                            <value>${installTCL}</value>
                        </isTrue>
                    </ruleList>
                </runProgram>
            </postInstallationActionList>
            <shouldPackRuleList>
                <isTrue>
                    <value>${installTCL}</value>
                </isTrue>
            </shouldPackRuleList>
        </component>
    </componentList>
    <preInstallationActionList>
        <autodetectJava>
            <explanation>Detect Java Runtime Engines</explanation>
            <promptUser>0</promptUser>
            <show>0</show>
            <validVersionList>
                <validVersion>
                    <bitness></bitness>
                    <maxVersion>1.8</maxVersion>
                    <minVersion></minVersion>
                    <requireJDK>1</requireJDK>
                    <vendor></vendor>
                </validVersion>
            </validVersionList>
        </autodetectJava>
    </preInstallationActionList>
    <defaultUnixDirectoryPermissions>777</defaultUnixDirectoryPermissions>
    <defaultUnixFilePermissions>666</defaultUnixFilePermissions>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <requireInstallationByRootUser>1</requireInstallationByRootUser>
    <saveRelativePaths>1</saveRelativePaths>
    <startMenuGroupName>Magic Lantern</startMenuGroupName>
    <vendor>Wizzer Works</vendor>
    <finalPageActionList>
        <addEnvironmentVariable>
            <explanation>Set TCL_HOME environment variable</explanation>
            <name>TCL_HOME</name>
            <scope>system</scope>
            <value>${installdirTCL}</value>
            <ruleList>
                <isTrue>
                    <value>${installTCL}</value>
                </isTrue>
            </ruleList>
        </addEnvironmentVariable>
        <addDirectoryToPath>
            <explanation>Add TCL to PATH</explanation>
            <insertAt>beginning</insertAt>
            <path>${installdirTCL}/bin</path>
            <ruleList>
                <isTrue>
                    <value>${installTCL}</value>
                </isTrue>
            </ruleList>
        </addDirectoryToPath>
        <setWindowsACL>
            <action>allow</action>
            <explanation>Update ACL permissions</explanation>
            <files>${installdir}</files>
            <recurseContainers>1</recurseContainers>
            <recurseObjects>1</recurseObjects>
            <show>0</show>
            <users>Everyone</users>
        </setWindowsACL>
    </finalPageActionList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/WizzerWorks/MagicLanternJava2DStudio</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
</project>

