	@echo ""
	@echo "***** Running Makefile target helloWorld_install *****"
	@echo ""
	cd $(MLE_HOME)/Titles/helloWorld/rehearsal/build/linux/LabelWidget; MLE_ROOT=$(MLE_ROOT) make install;

